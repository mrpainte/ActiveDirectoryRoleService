# Django
DJANGO_SETTINGS_MODULE=ad_manager.settings.production
DJANGO_SECRET_KEY=change-me-to-a-random-secret-key
ALLOWED_HOSTS=adrs.example.com,localhost,127.0.0.1
TZ=UTC

# Reverse proxy settings (SSL terminated externally)
SECURE_SSL_REDIRECT=false
CSRF_TRUSTED_ORIGINS=https://adrs.example.com

# Database
DB_NAME=ad_manager
DB_USER=ad_manager
DB_PASSWORD=changeme
DB_HOST=postgres
DB_PORT=5432

# Active Directory / LDAP
AD_LDAP_SERVERS=ldap://dc1.example.com,ldap://dc2.example.com
AD_LDAP_USE_SSL=false
AD_BASE_DN=DC=example,DC=com
AD_DOMAIN=EXAMPLE
AD_USER_SEARCH_BASE=DC=example,DC=com
AD_GROUP_SEARCH_BASE=DC=example,DC=com
AD_COMPUTER_SEARCH_BASE=DC=example,DC=com
AD_BIND_DN=CN=svc_admanager,OU=Service Accounts,DC=example,DC=com
AD_BIND_PASSWORD=changeme

# Kerberos SSO (optional)
AD_KERBEROS_ENABLED=false
AD_KERBEROS_KEYTAB=/etc/krb5.keytab
AD_KERBEROS_SERVICE=HTTP

# LDAP Pool
AD_LDAP_POOL_SIZE=10
AD_LDAP_POOL_LIFETIME=300
AD_LDAP_CONNECT_TIMEOUT=5
AD_LDAP_RECEIVE_TIMEOUT=10

# Celery / Redis
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email - SMTP
NOTIFICATION_BACKEND=smtp
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=true
DEFAULT_FROM_EMAIL=noreply@example.com

# Email - AWS SES (if NOTIFICATION_BACKEND=ses)
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=
AWS_SES_SECRET_ACCESS_KEY=

# Password Expiry
PASSWORD_EXPIRY_WARN_DAYS=14,7,3,1

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REDIS_URL=redis://redis:6379/0
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=300

# Session
SESSION_COOKIE_AGE=28800
